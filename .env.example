# API Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://127.0.0.1:27017/ruralsync

# JWT Secret - Use a strong secret in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS Origins (comma-separated list of allowed origins)
# For production, add your deployed frontend URLs
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:3000

# Optional: Hugging Face API Token (for AI features)
# HF_TOKEN=your-huggingface-token

# Optional: AWS S3 Configuration (for file uploads)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_BUCKET_NAME=your-bucket-name
